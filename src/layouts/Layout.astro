---
import '../styles/main.scss';
import Image from '../components/Image.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col bg-light font-montserrat text-base leading-[140%]">
		<Header />	
		<main class="px-5 md:px-20 lg:px-[200px]">
			<slot />
		</main>
		<div class="bg-container">
			<Image 
				src="/img/backgrounds/bg_shape_top.webp"
				alt=""
			/>
			<Image 
				src="/img/backgrounds/bg_shape_mid.webp"
				alt=""
			/>
			<Image 
				src="/img/backgrounds/bg_shape_bot.webp"
				alt=""
			/>
		</div>
		<Footer />
	</body>
</html>
<style lang="scss" is:global>
	@use '../styles/_variables.scss' as *;

	// html {
	// 	font-size: 60%;
	// 	@media screen and (min-width: 600px) {
	// 		font-size: 70%;
	// 	}
	// 	@media screen and (min-width: 1024px) {
	// 		font-size: 80%;
	// 	}
	// 	@media screen and (min-width: 1280px) {
	// 		font-size: 90%;
	// 	}
	// 	@media screen and (min-width: 1340px) {
	// 		font-size: 100%;
	// 	}
	// }

	body {
		min-height: 100vh;
		min-height: 100dvh;
	}

	main {
		flex: 1;
		min-height: 5000px;
	}

	main, footer, header {
		position: relative;
	}

	main, footer > *, header {
		padding: 35px 40px;

		@media screen and (min-width: 1024px) {
			padding: 35px 70px;
		}

		@media screen and (min-width: 1280px) {
			padding: 50px 100px;
		}
	}

	.bg-container {
		@include flex(flex-start, center, column, $gap:10vh);
		@include position(0, 0, $position: absolute);
		pointer-events: none;
		padding-top: 90px;
		z-index: -1;
		overflow: hidden;
		max-height: 100%;
	}

</style>
